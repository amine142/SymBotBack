<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <!-- Meta, title, CSS, favicons, etc. -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Login</title>

        {% stylesheets
            '@SonataAdminBundle/Resources/public/vendor/bootstrap/dist/css/bootstrap.min.css'
            '@SonataAdminBundle/Resources/public/vendor/AdminLTE/css/font-awesome.min.css'
            '@SonataCoreBundle/Resources/public/vendor/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css'
            '@SonataAdminBundle/Resources/public/vendor/select2/select2.css'
            '@SonataAdminBundle/Resources/public/vendor/select2/select2-bootstrap.css'
            '@SonataAdminBundle/Resources/public/vendor/x-editable/dist/bootstrap3-editable/css/bootstrap-editable.css'
            '@SonataAdminBundle/Resources/public/css/styles.css'
            '@SonataAdminBundle/Resources/public/css/layout.css'
        %}
        <link href="{{ asset_url }}" rel="stylesheet">
        {% endstylesheets %}
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Please Sign In</h3>
                        </div>
                        <div class="panel-body">
                            <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                                <fieldset>
                                    {% if csrf_token %}
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                    {% endif %}
                                    <div class="form-group">
                                        <input class="form-control" placeholder="E-mail" name="_username" >
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Password" name="_password" type="password" value="">
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                        </label>
                                    </div>
                                    <!-- Change this to a button or input when using this as a form -->
                                    <button type="submit" name="_submit" class="btn btn-lg btn-success btn-block">Login</button>
                                </fieldset>
                            </form>
                            <div class="clearfix"></div>
                            {% if error is not empty %} 
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>